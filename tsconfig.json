{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "lib": ["esnext", "DOM", "DOM.iterable"]
  },
  "include": ["**/*.js"],
  "exclude": ["**/*.config.js", "**/*.test.js", "bin/", "coverage/", "dist/"]
}
